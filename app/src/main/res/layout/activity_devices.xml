<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="eu.credential.app.patient.ui.settings.DevicesActivity">

    <WebView
        android:id="@+id/myWebView"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#aaa" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Android View"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_from_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Web Antwort"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_text_to_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Value send to Web"
            android:textColor="@color/colorPrimary"
            android:paddingBottom="8dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_send_to_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Send to Web"
            android:paddingBottom="8dp"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_generate_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Generate New Value"
        android:paddingBottom="1dp"
        android:textSize="20sp" />
</LinearLayout>