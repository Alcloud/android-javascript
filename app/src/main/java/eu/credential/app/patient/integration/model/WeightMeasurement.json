{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Weight Measurement",
  "type": "object",
  "properties": {
    "weight": {
      "description": "measured mass in weight units",
      "type": "number",
      "minimum": 0
    },
    "weightUnit": {
      "description": "mass unit",
      "enum": [
        "kg",
        "lb"
      ]
    },
    "height": {
      "description": "measured size in height units",
      "type": "number",
      "minimum": 0
    },
    "heightUnit": {
      "description": "size unit",
      "enum": [
        "m",
        "in"
      ]
    },
    "bmi": {
      "description": "calculated body mass index",
      "type": "number",
      "minimum": 0
    },
    "deviceTime": {
      "description": "ISO time string given by measurement device",
      "type": "string"
    },
    "receiveTime": {
      "description": "ISO time string, stating when the app received measurement from device",
      "type": "string"
    }
  }
}